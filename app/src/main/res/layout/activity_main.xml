         android:src="@drawable/nature" />

     <ImageView
         android:id="@+id/img2"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:src="@drawable/nature2"
         android:scaleType="centerCrop"/>






</LinearLayout>